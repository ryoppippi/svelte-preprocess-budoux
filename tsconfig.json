{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"strict": true,
		"declaration": true,
		"inlineSourceMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src", "tests"]
}
